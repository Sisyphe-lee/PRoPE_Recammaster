    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Train ReCamMaster",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_recammaster.py",
            "args": [
                "--task",
                "train"
            ],
            "console": "integratedTerminal",
            "python": "/home/cyli/anaconda3/envs/recammaster/bin/python",
            "justMyCode": false,
        },
        {
            "name": "Python: Attach to Remote",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 6862,
            },
            "justMyCode": false,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]

}